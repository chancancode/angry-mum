- content_for :hero do
  .hero-unit
    %h1 Good morning!

- if @alerts.present?
  %table.table.table-striped
    %thead
      %tr
        %th What
        %th When
        %th How
        %th Who
    %tbody
      - @alerts.each do |alert|
        %tr
          %td
            = link_to alert.reason, edit_alert_path(alert)
          %td
            = printed_timestamp alert.start
          %td
            Trivia and timeout and stuff
          %td
            = alert.fallback_name
            = "(#{alert.fallback_phone})"

  %a#new_alert_trigger.btn.btn-primary.btn-large{ href: "#" }
    Set a new alert
  #new_alert_container{ style: "display: none" }
    = render 'new', alert: @alert

  - content_for :page_js do
    :javascript
      jQuery(function() {
        $('#new_alert_trigger').click(function(event) {
          $(this).fadeOut('fast', function() {
            $('#new_alert_container').slideDown();
          });
        });
      
      });

- else
  = render 'new', alert: @alert